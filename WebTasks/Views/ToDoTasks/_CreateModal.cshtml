@model WebTasks.Models.ToDoTask

<div class="modal-header">
    <h5 class="modal-title">Create New Task</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form id="createForm" asp-controller="ToDoTasksModal" asp-action="Create" method="post">
       
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" placeholder="Task Title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" placeholder="Task Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TaskPriority" class="form-label"></label>
            <select asp-for="TaskPriority" class="form-select">
                <option value="Low">Low</option>
                <option value="Medium">Medium</option>
                <option value="High">High</option>
            </select>
            <span asp-validation-for="TaskPriority" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Created" class="form-label"></label>
            <input asp-for="Created" class="form-control" type="datetime-local" required />
            <span asp-validation-for="Created" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="IsCompleted" class="form-check-input" />
            <label asp-for="IsCompleted" class="form-check-label"></label>
        </div>

        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Create Task</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        </div>
    </form>
</div>
