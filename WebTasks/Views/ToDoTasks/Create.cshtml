@model WebTasks.Models.ToDoTask

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-6 text-primary mb-4">Create New Task</h1>

<div class="row">
    <div class="col-md-6">
        <form id="createFormStatic" asp-controller="ToDoTasks" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            
            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Task Title" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Task Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            
            <div class="form-group mb-3">
                <label asp-for="TaskPriority" class="form-label">Priority</label>
                <select asp-for="TaskPriority" class="form-select">
                    @foreach (var priority in ViewBag.TaskPriorities)
                    {
                        <option value="@priority">@priority</option>
                    }
                </select>
                <span asp-validation-for="TaskPriority" class="text-danger"></span>
            </div>

            
            <div class="form-group mb-3">
                <label asp-for="Created" class="form-label">Created</label>
                <input asp-for="Created" class="form-control" type="datetime-local" required />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>

           
            <div class="form-group form-check mb-3">
                <input asp-for="IsCompleted" class="form-check-input" />
                <label asp-for="IsCompleted" class="form-check-label">Completed</label>
            </div>

           
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Task</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
